.container {
  width: 100%;
  max-width: 1100px;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 auto;
  padding-right: 0 !important;
  padding-left: 0 !important;
  box-shadow: 10px 10px 30px rgba(0, 0, 0, 0.12);
}
.logo{
  height: fit-content;
  width: fit-content;
  z-index: 1000;
}

.formtable {
  width: 100%;
  box-sizing: border-box;
}

.header-update{
  padding: 10px;
  background-color: #045A97;
  width: 100%;
  text-align: center;
  color: white;
  display: flex;
  color: white;
  text-align: center;
  padding: 0.5rem 0.5rem;
  font-size: 20px; 
  background: #045A97 !important;
  font-weight: bolder;
  border-radius: 10px 10px 0 0;
}

.body {
  width: 100%;
  max-width: 1100px;
}

.table-container {
  width: 100%;
  max-width: fit-content;
  height: 500px; /* Điều chỉnh chiều cao theo yêu cầu của bạn */
  overflow: auto;
}

.table {
  display: flex;
  flex-direction: column;
  width: 1100px; /* Đặt chiều rộng bằng với chiều rộng của container */
}

.title-row{
  display: flex;
  width: 100%;
}

.title-collumn {
  flex: 1;
  padding: 5px;
  border: 1px solid #ddd;
  text-align: center;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
  max-height: auto;
}
.title-collumn-stt{
  flex: 1;
  padding: 10px;
  border: 1px solid #ddd;
  text-align: center;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
  max-height: auto;
  max-width: 60px;
}

.header-row {
  font-weight: bold;
}
.content-icon{
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-edt{
  height: 15px;
  width: 15px;
  cursor: pointer;
}


.icon-del{
  height: 15px;
  width: 15px;
  margin-left: 15px;
  cursor: pointer;
}
.icon:hover{
 
  opacity: 0.6 !important;
  cursor: pointer;
  position:relative;
}




