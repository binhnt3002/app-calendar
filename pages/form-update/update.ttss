.task-form {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px; 
  margin-top: 10px;
}
.component{
  display: flex;
  gap: 15px;
  flex-wrap: wrap;
  width: 100%;
}
.section-user {
  align-items: center; 
  padding: 10px;
  margin-bottom: 10px;
  margin-right: 40px;
  display: flex;
  justify-content: right;
}
.select-time{
  border: #f1f1f1;
  margin-top: 10px;
  margin-bottom: 10px;
}

.form-field{
  justify-content: space-between;
  display: block !important;
  flex-direction: column;
}

.input-text{
  width: 100%;
  background-color: rgb(255, 255, 255,0.8);
  padding: 5px;
  border: 2px solid rgb(231, 230, 230); /* Đặt màu và độ rộng của border */
}

textarea {
  /* margin-top: 5px; */
  width: 99%;
  height: 110px;
  padding: 10px 0;
  /* box-sizing: border-box; */
  border-radius: 15px;
  resize: none;
  box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.08);
  border: 2px solid rgb(231, 230, 230); /* Đặt màu và độ rộng của border */
}


.picker-text{
  height: 40px;
  line-height: 35px;
  background-color: #bbbfc4;
  border-radius: 20px;
  padding: 0;
  margin-bottom: 5px;
  font-size: 13px;
  width: auto;
  text-align: center;
  box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.08);
  border: 2px solid rgb(231, 230, 230); /* Đặt màu và độ rộng của border */
}

.picker-date{
  height:40px; 
  line-height: 35px;
  background-color: #bbbfc4;
  border-radius: 30px;
  font-size: 13px;
  min-width:auto;
  text-align: center;  
  box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.08);
  border: 2px solid rgb(231, 230, 230); /* Đặt màu và độ rộng của border */
}

.picker-time{
  height: 40px;
  line-height: 35px;
  background-color: rgb(255, 255, 255,0.8);
  border-radius: 30px;
  font-size: 13px;
  width: auto;
  text-align: center;
  box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.08);
  border: 2px solid rgb(231, 230, 230); /* Đặt màu và độ rộng của border */
}

.title1{
  font-weight: bold;
  font-size: 16px ;
  color: #045A97 !important;
}
.justify-content-end{
  padding: 15px 0;
}


button{
  height: 50px !important;
  font-size: 15px !important;
  line-height: 5px !important;
