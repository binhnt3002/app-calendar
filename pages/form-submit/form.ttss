.container-btn{
  display: flex;
  /* justify-self: end; */
}

.form-buttons {
  display: flex;
  justify-content: flex-end;
  margin-right: 50px;
}

.form-buttons .btn{
  color: #ffffff;
  background-color: #007bff;
  /* margin: px; */
