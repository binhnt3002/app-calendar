.page-body-info {
  padding-bottom: 0;
  height: 260px;
}
.userinfo-avatar {
  border-radius: 128rpx;
  width: 100px;
  height: 100px;
}
.userinfo-nickname {
  font-weight: bold;
  /* margin-top: 20rpx; */
  font-size: 20px;
}