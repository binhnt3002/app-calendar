  border: none;
  margin: 10px 0px 10px 15px;
}
.btn:hover{
  background-color: rgb(255, 255, 255);
  color: #007bff;
  cursor:pointer;
  position:relative;
}


.component-picker-time{
  display: flex ;
  margin-top: 7px;
}
.content-pick{
  /* display: flex; */
  gap: 15px;
  flex-wrap: wrap;
  width: 100%;
}
 .date-selection{
  /* display: contents; */
}

.box-time{
  display: flex !important;
}

.btn:before,.btn:after{
  content:'';
  position:absolute;
  top:0;
  right:0;
  height:2px;
  width:0;
  background: #007bff;
  transition:500ms ease all;
}
.btn:after{
  right:inherit;
  top:inherit;
  left:0;
  bottom:0;
}
.btn:hover:before,.btn:hover:after{
  width:70%;
  transition:800ms ease all;
}
